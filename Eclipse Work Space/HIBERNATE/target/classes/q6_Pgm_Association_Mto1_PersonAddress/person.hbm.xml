<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="q6_Pgm_Association_Mto1_PersonAddress.Person" table="TB_PERSON">
		<id name="id">
			<generator class="increment"></generator>
		</id>
		<property name="name" type="string" length="20"></property>
		<many-to-one name="address"
			class="q6_Pgm_Association_Mto1_PersonAddress.Address"
			column="ADDRESS_ID" cascade="all" not-null="true"  />
			<!--  If i make here unique as true, then it will start working as one to one relationsip
			because then addressid column will start taking only non unique values
			 unique="true"
			 -->

	</class>


</hibernate-mapping>
