<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

<class name="w_app_multipleSaveOperation.Employee" table="TB_EMPLOYEE">
<id name="employeeId" column="EMPLOYEEID" type="integer" length="10">
<generator class="increment"></generator>
</id>
<property name="employeeName" column="NAME" type="string" length="30"></property>
<property name="employeeDesignation" column="DESIGNATTION" type="string" length="30"></property>
<property name="employeeSalary" column="SALARY" type="integer" length="10"></property>
</class>

</hibernate-mapping>