<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="p6_Pgm_PkGenerator.Student" table="TB_STUDENT">
		<id name="sno" column="NO" type="integer" length="4" >
		<!-- <generator class="assigned"></generator> 
		
			by default the generator class is assigned only. In this case programmer has to set the
			primary key explictly. It will be used when we are using string as the primary key. For example
			we may be using username as the primary key.
		--> 
		<!-- <generator class="increment"></generator> 
			
			In this hibernate will generate the next as id as currnet max id +1
		
		-->
		
		<generator class="sequence">
				<param name="sequence">TB_STUDENT_SEQ1</param>
		</generator>
		
		<!-- 
		
		sequence generator will genearate the id based on sequence written in DB. In this case we have
		set the sequence to increment by 100 and start with 200
		
		 -->
		</id>
		<version name="version" column="VERSION"></version>
		<property name="sname" column="NAME" type="string" length="20"></property>
		<property name="semail" column="EMAIL" type="string" length="25"></property>
		<property name="smobile" column="MOBILE" type="string" length="15"></property>
	</class>
</hibernate-mapping>
