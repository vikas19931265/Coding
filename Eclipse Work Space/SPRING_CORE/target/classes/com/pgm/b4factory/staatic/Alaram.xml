<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">
	<bean id="calendarbean" class="java.util.Calendar"
		factory-method="getInstance">
		<!--lets create the calendar object first using the factory method it has 
			provided -->
	</bean>
	<bean id="alarambean" class="com.pgm.b4factory.staatic.Alaram">
		<property name="calendar" ref="calendarbean"></property>
	</bean>

</beans>
	