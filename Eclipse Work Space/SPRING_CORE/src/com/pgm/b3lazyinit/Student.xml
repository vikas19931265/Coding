<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	<bean id="studentBean" class="com.pgm.b3lazyinit.Student"
		autowire="byName"  >
		<property name="id" value="1234"></property>
		<property name="name" value="vikas"></property>
	</bean>
	<bean id="address" class="com.pgm.b3lazyinit.Address">
		<property name="addressLine1" value="kabilar street"></property>
		<property name="addressLine2" value="palvanthangal"></property>
		<property name="zipCode" value="229306"></property>
	</bean>
	<bean id="secondAdr" class="com.pgm.b3lazyinit.Address" lazy-init="false">
		<property name="addressLine1" value="bahadur nagar"></property>
		<property name="addressLine2" value="raebareli"></property>
		<property name="zipCode" value="229306"></property>
	</bean>
	

</beans>

