<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../../pcf.xsd">
  <Screen
    id="FNOLWizard_NotesScreen">
    <Require
      name="Claim"
      type="Claim"/>
    <Toolbar>
      <WizardButtons/>
    </Toolbar>
    <ListViewPanel
      id="ClaimNotesLV">
      <RowIterator
        editable="false"
        elementName="Note"
        value="Claim.Notes">
        <Row>
          <FormatCell
            id="col1"
            width="200">
            <ContentInput
              align="left"
              id="Edit"
              labelAbove="true">
              <Link
                action="FNOLWizard_EditNotePopup.push(Note, Claim)"
                id="EditLink"
                label="displaykey.Java.Note.Edit"/>
              <Link
                desc="spacer link"
                id="SpacerLink0"
                label="&quot; &quot;"
                visible="true"/>
              <Link
                action="print.PrintNoteAction.printNote(Note)"
                available="Claim.State != ClaimState.TC_DRAFT"
                download="true"
                hideIfEditable="true"
                id="PrintLink"
                label="displaykey.Java.Note.Print"/>
            </ContentInput>
            <TextInput
              align="left"
              boldLabel="true"
              id="Author"
              label="displaykey.NVV.Claim.NoteDetail.Note.Author"
              value="Note.Author"/>
            <TextInput
              align="left"
              boldLabel="true"
              id="Topic"
              label="displaykey.NVV.Claim.NoteDetail.Note.Topic"
              value="Note.Topic"/>
            <TextInput
              align="left"
              boldLabel="true"
              id="RelatedTo"
              label="displaykey.NVV.Claim.NoteDetail.Note.RelatedTo"
              value="Note.getNoteRelatedTo()"/>
            <TextInput
              id="Confidential"
              labelAbove="true"
              value="displaykey.Java.Note.Confidential"
              visible="Note.Confidential"/>
          </FormatCell>
          <FormatCell
            id="col2"
            wrap="true">
            <TextInput
              boldLabel="true"
              id="AuthoringDate"
              label="gw.api.util.StringUtil.formatDate(Note.authoringdate, &quot;medium&quot;)"
              value="gw.api.util.StringUtil.formatTime(Note.authoringdate, &quot;short&quot;)"/>
            <TextInput
              id="Subject"
              label="true"
              value="Note.Subject"
              visible="Note.Subject != null"/>
            <NoteBodyInput
              id="Body"
              labelAbove="true"
              value="Note.Body"/>
          </FormatCell>
        </Row>
      </RowIterator>
    </ListViewPanel>
  </Screen>
</PCF>