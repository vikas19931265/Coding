<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../../pcf.xsd">
  <ListViewPanel
    id="ClaimSummaryExposuresLV">
    <Require
      name="Claim"
      type="Claim"/>
    <Require
      name="ExposureList"
      type="Exposure[]"/>
    <RowIterator
      editable="false"
      elementName="Exposure"
      value="ExposureList">
      <Row>
        <LinkCell
          align="center"
          icon="&quot;icon_claimClosed.png&quot; "
          id="Status"
          printWidth="0.07"
          sortBy="Exposure.State"
          width="33">
          <Link
            icon="Exposure.Closed ? &quot;icon_claimClosed.png&quot; : &quot;icon_claimOpen.png&quot;"
            id="StatusIcon"
            tooltip="Exposure.State.DisplayName"/>
        </LinkCell>
        <Cell
          action="ExposureDetailForward.drilldown(Claim, Exposure)"
          align="center"
          id="Order"
          label="displaykey.LV.Exposure.Exposures.Order"
          numCols="2"
          printWidth="0.05"
          sortOrder="1"
          value="Exposure.ClaimOrder"
          width="40"/>
        <TypeKeyCell
          action="ExposureDetailForward.drilldown(Claim, Exposure)"
          id="Type"
          label="displaykey.LV.Exposure.Exposures.Type"
          printWidth="0.15"
          value="Exposure.ExposureType"
          width="105"/>
        <TypeKeyCell
          id="Coverage"
          label="displaykey.LV.Exposure.Exposures.Coverage"
          numCols="30"
          printWidth="0.20"
          value="Exposure.PrimaryCoverage"
          wrapLabel="true"/>
        <Cell
          action="ClaimContactDetailPopup.push(Exposure.Claimant, Claim)"
          enableSort="false"
          id="Claimant"
          label="displaykey.LV.Exposure.Exposures.Claimant"
          printWidth="0.15"
          value="Exposure.Claimant"
          width="130"
          wrapLabel="true"/>
        <Cell
          action="UserContactDetailPopup.push(Exposure.AssignedUser)"
          id="Assignee"
          label="displaykey.LV.Exposure.Exposures.Assignee"
          numCols="15"
          printWidth="0.15"
          sortBy="Exposure.AssignmentStatus,Exposure.AssignedUser,Exposure.AssignedQueue"
          value="Exposure.AssigneeDisplayString"
          width="130"/>
        <Cell
          enableSort="false"
          formatType="currency"
          id="RemainingReserves"
          label="displaykey.LV.Exposure.Exposures.RemainingReserves"
          numCols="10"
          printWidth="0.12"
          value="Exposure.ExposureRpt.RemainingReserves"
          visible="perm.Claim.viewreserves(Claim)"
          width="142"/>
        <Cell
          enableSort="false"
          formatType="currency"
          id="FuturePayments"
          label="displaykey.LV.Exposure.Exposures.FuturePayments"
          numCols="10"
          printWidth="0.12"
          value="Exposure.ExposureRpt.FuturePayments"
          visible="perm.Claim.viewpayments(Claim)"
          width="120"/>
        <Cell
          enableSort="false"
          formatType="currency"
          id="Paid"
          label="displaykey.LV.Exposure.Exposures.Paid"
          printWidth="0.1"
          value="Exposure.ExposureRpt.TotalPayments"
          visible="perm.Claim.viewpayments(Claim)"
          width="100"/>
        <Cell
          enableSort="false"
          formatType="currency"
          id="TotalRecoveries"
          label="displaykey.LV.Exposure.Exposures.TotalRecoveries"
          numCols="6"
          printWidth="0.12"
          value="Exposure.ExposureRpt.TotalRecoveries"
          visible="perm.Claim.viewrecoveries(Claim)"
          width="100"/>
      </Row>
    </RowIterator>
  </ListViewPanel>
</PCF>