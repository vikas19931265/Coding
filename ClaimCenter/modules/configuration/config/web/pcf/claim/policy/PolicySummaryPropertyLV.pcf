<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../../pcf.xsd">
  <ListViewPanel
    id="PolicySummaryPropertyLV">
    <Require
      name="policySummary"
      type="PolicySummary"/>
    <Require
      name="showCheckboxes"
      type="boolean"/>
    <Require
      name="checkboxesAvailable"
      type="boolean"/>
    <RowIterator
      canPick="false"
      editable="true"
      elementName="prop"
      value="policySummary.Properties">
      <ToolbarFlag
        name="prop"/>
      <Row>
        <CheckBoxCell
          available="checkboxesAvailable"
          editable="showCheckboxes"
          id="PropertySelected"
          label="displaykey.LV.Policy.Vehicles.Selected"
          value="prop.Selected"
          visible="showCheckboxes"
          width="100"/>
        <Cell
          id="PropertyNumber"
          label="displaykey.Web.Address.Default.Number"
          sortOrder="1"
          value="prop.PropertyNumber"/>
        <Cell
          id="Location"
          label="displaykey.Web.Address.Default.LocationNumber"
          value="prop.Location"/>
        <Cell
          id="BuildingNumber"
          label="displaykey.Web.Address.Default.BuildingNumber"
          value="prop.BuildingNumber"/>
        <Cell
          id="Description"
          label="displaykey.Web.Address.Default.BuildingDescription"
          value="prop.Description"/>
        <Cell
          id="Address"
          label="displaykey.Web.Address.Default.Address"
          sortBy="prop.AddressLine1"
          value="prop.DisplayAddress"/>
        <Cell
          id="City"
          label="displaykey.Web.Address.Default.City"
          sortBy="prop.City"
          value="prop.DisplayCity"/>
      </Row>
    </RowIterator>
  </ListViewPanel>
</PCF>